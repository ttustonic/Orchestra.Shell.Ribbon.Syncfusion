<catel:UserControl x:Class="Orchestra.Examples.Ribbon.Views.DashBoardView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Gauges;assembly=Syncfusion.SfGauge.WPF"
                   mc:Ignorable="d"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns:viewmodels="clr-namespace:Orchestra.Examples.Ribbon.ViewModels"
                   d:DataContext="{d:DesignInstance Type=viewmodels:DashBoardViewModel}">

    <Grid Name="Layout">

        <Grid.RowDefinitions>
            <RowDefinition Height="65*" />
            <RowDefinition Height="44*" />
            <RowDefinition Height="254*" />
            <RowDefinition Height="200*" />
            <RowDefinition Height="44*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="66*" />
            <ColumnDefinition Width="84*" />
            <ColumnDefinition Width="730*" />
            <ColumnDefinition Width="84*" />
            <ColumnDefinition Width="66*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="/Resources/Dashboard/Pattern.png" />
                </Grid.Background>
                <Grid Grid.Column="1" Margin="15">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Resources/Dashboard/Header.png" />
                    </Grid.Background>
                </Grid>
            </Grid>
        </Grid>
        <Rectangle
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Height="1"
            VerticalAlignment="Top"
            Stroke="#FF3E3E3D"
            StrokeDashArray="2 2" />
        <Rectangle
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Height="1"
            VerticalAlignment="Bottom"
            Stroke="#FF3E3E3D"
            StrokeDashArray="2 2" />
        <Rectangle
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Height="1"
            VerticalAlignment="Bottom"
            Stroke="#FF3E3E3D"
            StrokeDashArray="2 2" />
        <Rectangle
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="1"
            HorizontalAlignment="Left"
            Stroke="#FF3E3E3D"
            StrokeDashArray="2 2" />
        <Rectangle
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="3"
            Width="1"
            HorizontalAlignment="Right"
            Stroke="#FF3E3E3D"
            StrokeDashArray="2 2" />

        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  .. Speed  ..  -->

            <Grid Grid.Column="0">
                <Rectangle
                    Width="1"
                    HorizontalAlignment="Right"
                    Stroke="#FF3E3E3D"
                    StrokeDashArray="2 2" />
                <syncfusion:SfCircularGauge x:Name="SpeedGauge">
                    <syncfusion:SfCircularGauge.Scales>
                        <syncfusion:CircularScale
                            BindRangeStrokeToTicks="True"
                            EndValue="160"
                            FontSize="12"
                            Interval="20"
                            LabelStroke="White"
                            MinorTicksPerInterval="0"
                            RimStroke="#FFBBBBBB"
                            RimStrokeThickness="4"
                            StartAngle="140"
                            StartValue="0"
                            SweepAngle="260"
                            TickLength="10"
                            TickPosition="Cross"
                            TickStroke="#FFBBBBBB"
                            TickStrokeThickness="4">
                            <syncfusion:CircularScale.Pointers>
                                <syncfusion:CircularPointer
                                    x:Name="SpeedPointer"
                                    NeedleLengthFactor="0.5"
                                    NeedlePointerStroke="#FF719836"
                                    PointerCapDiameter="25"
                                    PointerCapStroke="#FF719836"
                                    Value="{Binding Speed, Mode=TwoWay}" />
                                <syncfusion:CircularPointer
                                    PointerType="RangePointer"
                                    RangePointerStroke="#FF719836"
                                    RangePointerStrokeThickness="15"
                                    Value="{Binding Speed, Mode=TwoWay}" />
                            </syncfusion:CircularScale.Pointers>
                            <syncfusion:CircularScale.Ranges>
                                <syncfusion:CircularRange
                                    EndValue="100"
                                    StartValue="0"
                                    Stroke="#FF719836" />
                            </syncfusion:CircularScale.Ranges>
                        </syncfusion:CircularScale>
                    </syncfusion:SfCircularGauge.Scales>
                </syncfusion:SfCircularGauge>
                <TextBlock
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="15"
                    Foreground="#FF8B8181"
                    Text="SPEED in MPH" />
            </Grid>

            <!--  .. RPM  ..  -->

            <Grid Grid.Column="1">
                <syncfusion:SfCircularGauge x:Name="RpmGauge">
                    <syncfusion:SfCircularGauge.Scales>
                        <syncfusion:CircularScale
                            BindRangeStrokeToTicks="True"
                            EndValue="8"
                            FontSize="12"
                            Interval="1"
                            LabelStroke="White"
                            MinorTicksPerInterval="0"
                            RangePosition="SetAsGaugeRim"
                            RimStroke="#FFBBBBBB"
                            RimStrokeThickness="4"
                            StartAngle="140"
                            StartValue="0"
                            SweepAngle="260"
                            TickLength="10"
                            TickPosition="Cross"
                            TickStroke="#FFBBBBBB"
                            TickStrokeThickness="4">
                            <syncfusion:CircularScale.Pointers>
                                <syncfusion:CircularPointer
                                    x:Name="RpmPointer"
                                    NeedleLengthFactor="0.5"
                                    NeedlePointerStroke="#FF1B8FCF"
                                    PointerCapDiameter="25"
                                    PointerCapStroke="#FF1B8FCF"
                                    Value="{Binding RPM, Mode=TwoWay}" />
                                <syncfusion:CircularPointer
                                    PointerType="RangePointer"
                                    RangePointerStroke="#FF1B8FCF"
                                    RangePointerStrokeThickness="15"
                                    Value="{Binding RPM, Mode=TwoWay}" />
                            </syncfusion:CircularScale.Pointers>
                            <syncfusion:CircularScale.Ranges>
                                <syncfusion:CircularRange
                                    EndValue="5"
                                    StartValue="0"
                                    Stroke="#FF1B8FCF" />
                            </syncfusion:CircularScale.Ranges>
                        </syncfusion:CircularScale>
                    </syncfusion:SfCircularGauge.Scales>
                </syncfusion:SfCircularGauge>
                <TextBlock
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="15"
                    Foreground="#FF8B8181"
                    Text="RPM" />
            </Grid>
        </Grid>
        <Grid
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>

            <!--  ..  Temperature ..  -->

            <Rectangle
                Grid.RowSpan="4"
                Width="1"
                HorizontalAlignment="Right"
                Stroke="#FF3E3E3D"
                StrokeDashArray="2 2" />
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Bottom">
                <syncfusion:SfCircularGauge
                    x:Name="TempGauge"
                    Width="270"
                    Height="270"
                    Margin="0,0,-20,-120">
                    <syncfusion:SfCircularGauge.Scales>
                        <syncfusion:CircularScale
                            BindRangeStrokeToTicks="True"
                            EndValue="80"
                            Interval="10"
                            LabelStroke="White"
                            MinorTicksPerInterval="0"
                            RangePointerPosition="Outside"
                            RangePosition="SetAsGaugeRim"
                            RimStroke="#FFBBBBBB"
                            RimStrokeThickness="6"
                            StartAngle="175"
                            StartValue="0"
                            SweepAngle="190"
                            TickLength="10"
                            TickPosition="Cross"
                            TickStroke="#FFBBBBBB"
                            TickStrokeThickness="4">
                            <syncfusion:CircularScale.Pointers>
                                <syncfusion:CircularPointer
                                    x:Name="TempPointer"
                                    PointerType="RangePointer"
                                    RangePointerStroke="#FFA41413"
                                    RangePointerStrokeThickness="20"
                                    Value="{Binding Temperature, Mode=TwoWay}" />
                            </syncfusion:CircularScale.Pointers>
                            <syncfusion:CircularScale.Ranges>
                                <syncfusion:CircularRange
                                    EndValue="50"
                                    StartValue="0"
                                    Stroke="#FFA41413" />
                            </syncfusion:CircularScale.Ranges>
                        </syncfusion:CircularScale>
                    </syncfusion:SfCircularGauge.Scales>
                </syncfusion:SfCircularGauge>
            </Grid>
            <Border
                Grid.Row="2"
                Width="75"
                Height="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderBrush="#FF8B8181"
                BorderThickness="0.5"
                CornerRadius="5">
                <TextBlock
                    x:Name="TempTextBlock"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="SeguoeUI"
                    FontSize="30"
                    Foreground="#FF932928"
                    Text="{Binding TemperatureText, Mode=TwoWay}" />
            </Border>
            <TextBlock
                Grid.Row="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="15"
                Foreground="#FF8B8181"
                Text="TEMPERATURE" />


            <!--  .. Fuel ..  -->


            <Grid Grid.RowSpan="4" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.17*" />
                    <RowDefinition Height="0.8*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="20"
                    Height="20"
                    Margin="0,0,-10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resources/Dashboard/Fuel.png" Stretch="Fill" />
                    </Border.Background>
                </Border>
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Foreground="#FFBBBBBB"
                    Text="E" />

                <syncfusion:SfCircularGauge
                    x:Name="FuelGauge"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,0,-100"
                    VerticalAlignment="Center">
                    <syncfusion:SfCircularGauge.Scales>
                        <syncfusion:CircularScale
                            EndValue="100"
                            FontSize="0.2"
                            Interval="25"
                            LabelPosition="Inside"
                            LabelStroke="Transparent"
                            MinorTicksPerInterval="0"
                            RimStroke="#FFBBBBBB"
                            RimStrokeThickness="8"
                            StartAngle="222"
                            StartValue="0"
                            SweepAngle="96"
                            TickLength="12"
                            TickPosition="Outside"
                            TickStroke="#FFBBBBBB"
                            TickStrokeThickness="3.5">
                            <syncfusion:CircularScale.Pointers>
                                <syncfusion:CircularPointer
                                    x:Name="FuelPointer2"
                                    PointerType="RangePointer"
                                    RangePointerStroke="#FF323232"
                                    RangePointerStrokeThickness="7"
                                    Value="100" />
                                <syncfusion:CircularPointer
                                    x:Name="FuelPointer1"
                                    PointerType="RangePointer"
                                    RangePointerStroke="#FFECA414"
                                    RangePointerStrokeThickness="7"
                                    Value="{Binding Fuel, Mode=TwoWay}" />
                            </syncfusion:CircularScale.Pointers>
                        </syncfusion:CircularScale>
                    </syncfusion:SfCircularGauge.Scales>
                </syncfusion:SfCircularGauge>

                <Border
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="75"
                    Height="35"
                    Margin="0,0,15,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    BorderBrush="#FF8B8181"
                    BorderThickness="0.5"
                    CornerRadius="5">
                    <TextBlock
                        x:Name="FuelTextBlock"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="SegoeUI"
                        FontSize="30"
                        Foreground="#FFECA414"
                        Text="{Binding FuelGaugeText, Mode=TwoWay}" />
                </Border>
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="#FF8B8181"
                    Text="FUEL" />
            </Grid>

            <!--  .. Torque ..  -->

            <Grid Grid.RowSpan="4" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*" />
                    <RowDefinition Height="0.8*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                </Grid.RowDefinitions>
                <Rectangle
                    Grid.RowSpan="4"
                    Width="1"
                    HorizontalAlignment="Left"
                    Stroke="#FF3E3E3D"
                    StrokeDashArray="2 2" />
                <syncfusion:SfCircularGauge
                    x:Name="TorqueGauge"
                    Grid.Row="1"
                    Margin="0,0,0,-120">
                    <syncfusion:SfCircularGauge.Scales>
                        <syncfusion:CircularScale
                            BindRangeStrokeToTicks="True"
                            EnableSmartLabels="True"
                            EndValue="2.1001"
                            Interval="0.3"
                            LabelStroke="White"
                            MinorTicksPerInterval="0"
                            NoOfFractionalDigit="1"
                            RimStroke="#FFBBBBBB"
                            RimStrokeThickness="7"
                            StartAngle="180"
                            StartValue="0.3"
                            SweepAngle="180"
                            TickLength="15"
                            TickPosition="Cross"
                            TickStroke="#FFBBBBBB"
                            TickStrokeThickness="6">
                            <syncfusion:CircularScale.Pointers>
                                <syncfusion:CircularPointer
                                    x:Name="TorquePointer"
                                    PointerType="RangePointer"
                                    RangePointerStroke="#FF23B7C3"
                                    RangePointerStrokeThickness="20"
                                    Value="{Binding Torque, Mode=TwoWay}" />
                            </syncfusion:CircularScale.Pointers>
                            <syncfusion:CircularScale.Ranges>
                                <syncfusion:CircularRange
                                    EndValue="1.5"
                                    StartValue="0.3"
                                    Stroke="#FF23B7C3" />
                            </syncfusion:CircularScale.Ranges>
                        </syncfusion:CircularScale>
                    </syncfusion:SfCircularGauge.Scales>
                </syncfusion:SfCircularGauge>
                <Border
                    Grid.Row="2"
                    Width="75"
                    Height="35"
                    HorizontalAlignment="Center"
                    BorderBrush="#FF8B8181"
                    BorderThickness="0.5"
                    CornerRadius="5">
                    <TextBlock
                        x:Name="TorqueTextBlock"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontFamily="SegoeUI"
                        FontSize="30"
                        Foreground="#FF23B7C3"
                        Text="{Binding Torque, Mode=TwoWay}" />
                </Border>
                <TextBlock
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="#FF8B8181"
                    Text="TORQUE" />
            </Grid>
        </Grid>

    </Grid>

</catel:UserControl>
